doctype html
html
  head
    == Slim::Template.new("head.slim").render
  body#clinicSearchPage
    == Slim::Template.new("navbar.slim").render
    #container-clinic.container
      .search-clinic-wrapper
        .clf-filter
          aside#filterAffix data-spy="affix" class="affix-top" data-offset-top="65"
            == Slim::Template.new("left_filter.slim").render
